.container{:style => "margin-top:60px"}
  .row
    .col-md-5.col-md-offset-4
      .panel.panel-default{:style => "border-radius:0px"}
        .panel-heading
          %h3.panel-title{:style => "text-align:center; padding:10px"} Regístrate
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f|
            %fieldset

              = devise_error_messages!
              .form-group
                = f.label :name, class: "control-label col-md-4", :style => "color:#333"
                .col-md-8
                  = f.text_field :name, class: "text-field form-control", html: {spellcheck: "false"}
              
              .form-group
                = f.label :email, class: "control-label col-md-4", :style => "color:#333"

                .col-md-8
                  = f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"}
              .form-group
                = f.label :password, class: "control-label col-md-4", :style => "color:#333"

                .col-md-8
                  = f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"}
              .form-group
                = f.label :password_confirmation, "Password Confirmation", class: "control-label col-md-4", :style => "color:#333"

                .col-md-8
                  = f.password_field :password_confirmation, class: "text-field form-control", html: {autocomplete: "off"}
              .form-group
                .col-md-offset-4.col-md-8
                  = f.submit "Regístrate ", class: "btn btn-primary"
              %hr
              .form-group
                .col-md-offset-4.col-md-8
                  = render "devise/shared/links"