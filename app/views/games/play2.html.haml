.container
  %h2="Tu puntaje #{@score}"
  .well
    %h1= @question.question

    - @question.alternatives.each do |alt|
      %p
        = alt.alternative
        - unless alt.alternative.empty?
          - unless @alternative # 
            %a{:href=> games_play_path(:q => @question.id, :alt => alt.id), :class => 'btn btn-small btn-primary'}
              %i.glyphicon.glyphicon-check

  - if @alternative 
    -if @alternative.correct == true
      %h2{:style => 'text-align:center'}
        .label.label-success
          Correcto 
      %h3 
        =link_to('Siguiente', games_play2_path)
      
    -else
      %h2{:style => 'text-align:center'}
        .label.label-danger
          Incorrecto 
      %h3
        %ul 
          %li=link_to('Empezar de nuevo', games_new_path)
          -unless user_signed_in?
            %li= link_to("Guardar puntaje y respuestas", new_user_session_path)

.container
  .progress
    .progress-bar.progress-bar-success.progress-bar-striped.active{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "completed", :role => "progressbar", :style => "width: #{@completed}%"}
      %span.sr-only 45% Complete


= will_paginate @questions
